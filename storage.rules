rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to manage their own profile images
    match /profiles/{userId}/{imageName} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload verification documents
    match /verification-documents/{userId}/{documentType} {
      // Only allow authenticated users to read/write their own documents
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        request.auth.token.role == 'admin'
      );
      allow create, update: if request.auth != null && 
        request.auth.uid == userId && 
        (documentType == 'license' || 
         documentType == 'government_id' || 
         documentType == 'verification_one' || 
         documentType == 'verification_two');
      allow delete: if false; // Don't allow deletion of verification documents
    }
  }
}
